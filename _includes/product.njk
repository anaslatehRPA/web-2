---
layout: layout.njk
---
<div class="row gy-4">
  <div class="col-md-5 col-12">
    <img src="{{ image or 'https://via.placeholder.com/400x220?text=สินค้า' }}" class="img-fluid rounded mb-3" alt="{{ title }}">
  </div>
  <div class="col-md-7 col-12">
    <h1 class="mb-3">{{ title }}</h1>
    <p class="lead">{{ description }}</p>
    {% if features %}
      <h5 class="mt-4 mb-2">คุณสมบัติ:</h5>
      <ul class="list-group mb-3">
        {% for item in features %}
          <li class="list-group-item">{{ item }}</li>
        {% endfor %}
      </ul>
    {% endif %}
    <a href="/contact/?product={{ title }}" class="btn btn-primary btn-lg">ขอใบเสนอราคา</a>
  </div>
</div>